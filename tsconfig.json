{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./src/types", "./node_modules/@types"], // Ensure type declaration files are included
    "types": ["node", "express"] // Specify types you want to include globally
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
